-if @articles
  -@articles.each do |article|
    %h2#title{:class=>'span-12 prepend-5 last'} 
      %a{:href=>"/article/#{article.id}"} #{article.title}
    %div{:class => 'quiet span-5'}
      %div{:class => 'quiet span-5 last'}
        %div{:class => 'span-3 last'}
          Posted
          =article.nice_date
          =article.author
        %div{:class => 'span-2 last'}
          %img{:src => "#{article.get_author_image}"}
      %p#tags{:class => 'span-5 last loud'}
        %h3.quiet Tagged with...
        =article.first_three_tags
    %div{:class => 'span-11'}
      %div#extract{:class => 'span-11 last'} #{article.extract_or_text}
      %h4#read_more{:class => 'aright span-3 prepend-8 last'} 
        %a{:href => "/article/#{article.id}"}read more...



