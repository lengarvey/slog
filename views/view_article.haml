%div#title{:class => 'span-16 last'}
  %h1.title #{@article.title}
%div#body{:class => 'span-16 last'}
  %p.date #{@article.date}
  %p.body #{@article.html_text}
  %div#fulltags{:class => 'span-16 last'}
    %h3{:class => 'quiet'} Tagged with...
    =@article.get_tag_links
%div#comment{:class => 'span-17 last comment'}
  %div#disqus_thread
  %script{:type=>'text/javascript'}
    ="/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */"
    ="var disqus_shortname = 'bottledup'; // required: replace example with your forum shortname"
    ="// The following are highly recommended additional parameters. Remove the slashes in front to use."
    ="// var disqus_identifier = 'unique_dynamic_id_1234';"
    ="// var disqus_url = 'http://example.com/permalink-to-page.html';"
    ="/* * * DON'T EDIT BELOW THIS LINE * * */"
    ="(function() {"
    ="    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;"
    ="    dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';"
    ="    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);"
    ="})();"
  %noscript 
    Please enable JavaScript to view the 
    %a{:href=>"http://disqus.com/?ref_noscript"}comments powered by Disqus.
  %a{:href=>"http://disqus.com", :class=>"dsq-brlink"} 
    blog comments powered by 
    %span{:class=>"logo-disqus"}Disqus
